	public int tran(int id){
		int j = 0;
		String sql = "UPDATE \r\n" + 
				"  `mng`.`emp` \r\n" + 
				"SET\r\n" + 
				"  if_train = \"是\"\r\n" + 
				"WHERE `empno` = ? ";
